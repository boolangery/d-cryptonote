{
	"name": "cryptonote",
	"authors": [
		"Eliott Dumeix",
		"Oliver Weichhold",
		"Brian Gladman",
		"The Monero Project",
		"others..."
	],
	"description": "D binding for cryptonote hash library (exposed by coinfoundry/miningcore)",
	"copyright": "Copyright Â© 2018, Eliott Dumeix",
	"license": "MIT",
	"targetType": "library",
	"systemDependencies": "boost-devel",
	"configurations": [
		{
			"name": "static",
			"platforms": ["linux"],
			"preBuildCommands": [
				"make -C $PACKAGE_DIR/lib/libcryptonote libcryptonote.a"
			],
			"importPaths": ["lib/libcryptonote"],
			"lflags": ["-L$PACKAGE_DIR/lib/libcryptonote/"],
			"libs": [
				"cryptonote",
				"dl",
				"boost_system",
				"boost_date_time",
				"stdc++"
			]
		},
		{
			"name": "shared",
			"platforms": ["linux"],
			"libs": [
				"cryptonote",
				"boost_system",
				"boost_date_time",
				"stdc++"
			]
		},
		{
			"name": "unittest",
			"dependencies": {"dunit": "~>1.0.14"},
          	"platforms": ["linux"],
			"preBuildCommands": [
				"make -C $PACKAGE_DIR/lib/libcryptonote libcryptonote.a"
			],
			"importPaths": ["lib/libcryptonote"],
			"lflags": ["-L$PACKAGE_DIR/lib/libcryptonote/"],
			"libs": [
				"cryptonote",
				"dl",
				"boost_system",
				"boost_date_time",
				"stdc++"
			]
		}
	]
}
